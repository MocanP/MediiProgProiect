@page
@model MediiProgProiect.Pages.Vanzatori.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editare</h1>

<h4>Editarea detaliilor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vanzator.ID" />
            <div class="form-group">
                <label asp-for="Vanzator.NumeVanzator" class="control-label"></label>
                <input asp-for="Vanzator.NumeVanzator" class="form-control" />
                <span asp-validation-for="Vanzator.NumeVanzator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vanzator.Telefon" class="control-label"></label>
                <input asp-for="Vanzator.Telefon" class="form-control" />
                <span asp-validation-for="Vanzator.Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Inapoi la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
